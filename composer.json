{
    "name": "riinakw/remix2",
    "description": "Remix framework",
    "authors": [
        {
            "name": "Riina K.",
            "email": "riinak.tv@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Remix\\": "src/Remix",
            "Remix\\Utilities\\": "src/Ulitities",
            "Remix\\Tests\\": "tests/Remix"
        }
    },
    "require": {
        "php": ">=8.0.0"
    },
    "require-dev": {
        "phpdocumentor/phpdocumentor": "3.0",
        "phpunit/phpunit": "^9.5",
        "phpmd/phpmd": "^2.12",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "scripts": {
        "phpunit": [
            "php ./vendor/bin/phpunit --testdox"
        ],
        "phpmd": [
            "php ./vendor/bin/phpmd . text phpmd.xml --exclude vendor"
        ],
        "phpcs": [
            "php ./vendor/bin/phpcs ."
        ],
        "phpdoc": [
            "php ./vendor/bin/phpdoc"
        ]
    }
}
